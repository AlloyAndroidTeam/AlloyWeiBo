<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tabsLayout" android:layout_width="wrap_content"
	android:layout_height="fill_parent" android:background="@drawable/tab_bg_selector"
	android:padding="2dip" android:gravity="center" android:orientation="vertical">
    <ImageView android:id="@+id/tab_item_icon"  
        android:layout_width="30dip"  
        android:layout_height="30dip"  
        android:layout_centerHorizontal="true"  
        android:layout_margin="0dip"
    /> 
	<TextView android:id="@+id/tab_item_text" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Title" android:paddingTop="1dip"
		android:textSize="12dip" android:textColor="@drawable/tab_text_selector" />
</LinearLayout>

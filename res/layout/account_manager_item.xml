<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/accountProviderDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="腾讯微博" />

    <TextView
        android:id="@+id/descTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/accountProviderDesc"
        android:layout_below="@+id/accountProviderDesc"
        android:text="azrael(xxx)" />

    <Button
        android:id="@+id/accountDelBtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/accountProviderDesc"
        android:layout_marginRight="14dp"
        android:text="解除绑定" />

    <TextView
        android:id="@+id/defaultSelectTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/accountProviderDesc"
        android:layout_alignBottom="@+id/accountProviderDesc"
        android:layout_toRightOf="@+id/accountProviderDesc"
        android:text="(默认帐号)"
        android:textColor="#333333"
        android:visibility="gone" />

</RelativeLayout>